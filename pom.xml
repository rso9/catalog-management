         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>si.fri.rso9</groupId>
    <artifactId>catalogManagement</artifactId>
    <packaging>pom</packaging>

    <properties>
        <!-- central version tracking -->
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <kumuluzee.version>3.0.0</kumuluzee.version>
        <kumuluzee-openapi.version>1.0.0</kumuluzee-openapi.version>
        <pgsql.version>42.2.5</pgsql.version>
        <jackson-annotations.version>2.9.7</jackson-annotations.version>
        <kumuluzee-config.version>1.1.0</kumuluzee-config.version>
        <kumuluzee-discovery.version>1.1.0</kumuluzee-discovery.version>
        <kumuluz-health.version>1.0.1</kumuluz-health.version>
        <kumuluzee-logs.version>1.3.0</kumuluzee-logs.version>
        <kumuluzee-metrics.version>1.1.1</kumuluzee-metrics.version>
        <!-- versions of this project's modules -->
        <api.version>0.1-SNAPSHOT</api.version>
        <entities.version>0.1-SNAPSHOT</entities.version>
        <services.version>0.1-SNAPSHOT</services.version>
    </properties>

    <version>0.1-SNAPSHOT</version>
    <modules>
        <module>entities</module>
        <module>services</module>
        <module>api</module>
    </modules>

    <dependencyManagement>
